/* pages/details/bjshdz/bjshdz.wxss */
.content{
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.content input{
  font-size:28rpx;
  color:rgba(153,153,153,1);
  border-bottom: 1px solid #E6E6E6;
  height: 84rpx;
  line-height: 84rpx;
}
.default{
  font-size:28rpx;
  color:rgba(153,153,153,1);
}
.section{
  border-bottom: 1px solid #E6E6E6;
  height: 84rpx;
  line-height: 84rpx;
}
.picker{
  font-size:28rpx;
  color:rgba(153,153,153,1);
}
textarea{
  width: 100%;
  height: 173rpx;
  margin: 31rpx 0;
  font-size:28rpx;
  color:rgba(153,153,153,1);
}
.line{
  width: 100%;
  height:20rpx;
  background:rgba(244,244,244,1);
}
.moren{
  width: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.moren switch{
  float: right;
}
.wx-switch-input{
  width:82rpx !important;
  height:40rpx !important;
}
/*白色样式（false的样式）*/
.wx-switch-input::before{
width:80rpx !important;
height: 36rpx !important;
}
/*绿色样式（true的样式）*/
.wx-switch-input::after{
width: 40rpx !important;
height: 36rpx !important;
}
.dz{
  font-size:28rpx;
  color:rgba(51,51,51,1);
}
.save{
  width:375rpx;
  height:98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size:36rpx;
  background:rgba(255,45,45,1);
  position: fixed;
  bottom: 0;
  border-radius: 0;
}
.delete{
  width:375rpx;
  height:98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size:36rpx;
  background:rgba(255,45,45,1);
  position: fixed;
  bottom: 0;
  border-radius: 0;
  right: 0;
}