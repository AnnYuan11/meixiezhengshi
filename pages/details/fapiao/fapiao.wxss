/* pages/details/fapiao/fapiao.wxss */
.list{
  width: 734rpx;
  overflow: hidden;
  margin: 0 auto;
  position: relative;
}
.my-check{
  vertical-align: middle;
  float: left;
  margin-top:90rpx; 
  margin-right: 30rpx;
}
.lis image{
  float: left;
  margin-top: 50rpx;
}
.cz{
  float: left;
  margin-top: 60rpx;
  margin-left: 30rpx;
}
.cz text{
  display: block;
  line-height: 44rpx;
}
.czs{
  font-size:28rpx;
  color:rgba(51,51,51,1);
}
.date{
  font-size:24rpx;
  color:rgba(153,153,153,1);
}
.lis{
  width: 87%;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  margin: 0 auto;
}
.num{
  float: right;
  font-size:40rpx;
  font-weight:bold;
  color:rgba(85,221,133,1);
  margin-top: 70rpx;
}
.kp{
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #fff;
  font-size:36rpx;
  background-image: -webkit-linear-gradient(0deg, #47DA7C, #41EAC0);
  position: fixed;
  bottom: 0;
}
.lis .my-check{
  width: 43rpx;
  height: 43rpx;
  margin-top: 14%;
}
.list_box{
  width: 100%;
  height: auto;
  padding-bottom: 80rpx;
}
.swiper-tab{
	width: 100%;
	border-bottom: 2rpx solid #E6E6E6;
	text-align: center;
	line-height: 80rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  }
.swiper-tab-list{  
  font-size: 28rpx;
  display: inline-block;
	width: 50%;
	color: #333;
  font-weight:bold;
  position: relative;
}
.on{ 
  font-size: 34rpx;
  color: #47DB7E;
	border-bottom: 4rpx solid #47DB7E;
}
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }