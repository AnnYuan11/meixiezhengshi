/* pages/wode/my/my.wxss */
.bg_box{
  width: 100%;
  position: relative;
}
.bg_box image{
  width:750rpx;
}
.zc{
  position: absolute;
  left: 65rpx;
  top:30%;
}
.zc .dl{
  font-size:36rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  display: block;
}
.zc .content{
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
}
.list{
  width: 100%;
  padding: 0 30rpx 30rpx 30rpx;
  box-sizing: border-box;
}
.lis{
  width: 100%;
  margin: 30rpx 0;
}
.lis image{
  vertical-align: middle;
}
.lis text{
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  margin-left: 17rpx;
}
.lis .jt{
  float: right;
  margin-top: 16rpx;
}
.line{
  width:688rpx;
  height:2rpx;
  background:rgba(230,230,230,1);
  margin-top: 40rpx;
}
/* 我的头像 */
.bg_box .head{
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  float: left;
}
.xinxi{
  float: left;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.xinxi .number{
  display: block;
  font-size:34rpx;
  color:rgba(255,255,255,1);
  margin-top: 30rpx;
}
.xinxi .name{
  font-size:36rpx;
  color:rgba(255,255,255,1);
}
.chongzhi{
  width:140rpx;
  height:70rpx;
  background:rgba(255,255,255,1);
  border-radius:40rpx;
  font-size:28rpx;
  text-align: center;
  line-height: 70rpx;
  color:rgba(85,221,133,1);
  position: absolute;
  right: 47rpx;
  top:140rpx;
}
.exit{
  color: #fff;
  font-size: 30rpx;
  position: absolute;
  right: 50rpx;
  bottom: 50rpx;
  z-index: 99999;
}